<h1>Listing guilds</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Zone</th>
  </tr>

<% @guilds.each do |guild| %>
  <tr>
    <td><%=link_to  guild.code, guild%></td>
    <td><%=h guild.name %></td>
    <td><%=h guild.zone %></td>
    <td><%= link_to 'Edit', edit_guild_path(guild) %></td>
    <td><%= link_to 'Destroy', guild, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New guild', new_guild_path %>