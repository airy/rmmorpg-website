<h1>Listing items</h1>

<table>
  <tr>
    <th>Icon</th>
    <th>Owner</th>
    <th>Name</th>
    <th>Code</th>
    <th>Item Level</th>
    <th>Stack Size</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= iconify item.icon %></td>
    <td><%=link_to item.container.char.name, item.container.char %></td>
    <td><%=link_to item.name, item %></td>
    <td><%=link_to item.code, item %></td>
    <td><%=h item.item_level %></td>
    <td><%=h item.stack_size %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>