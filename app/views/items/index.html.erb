<h1>Listing items</h1>

<table>
  <tr>
    <th>Container</th>
    <th>Base item</th>
    <th>Code</th>
    <th>Created by</th>
    <th>Stack Size</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=link_to item.container.name, item.container if item.container%></td>
    <td><%=link_to item.base_item.name, item if item.base_item %></td>
    <td><%=h item.code %></td>
    <td><%=h item.created_by %></td>
    <td><%=h item.stack_size %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>